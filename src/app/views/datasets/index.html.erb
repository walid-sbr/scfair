<div class="container mx-auto px-4 mt-8">
  <div class="flex">
    <div class="w-1/4 pr-6">
      <%= form_with(
            url: datasets_path, 
            method: :get,
            data: { turbo: true },
            class: "space-y-6"
          ) do |form| %>
        
        <div class="search-box">
          <%= form.search_field :search, 
              class: "w-full rounded-md border-gray-300",
              placeholder: "Search datasets...",
              oninput: "this.form.requestSubmit()",
              data: { turbo_permanent: true } %>
        </div>

        <div id="filters" class="space-y-6">
          <% @search.facets.each do |facet| %>
            <div class="facet-group">
              <h3 class="font-semibold text-gray-700 mb-2"><%= facet.name.to_s.titleize %></h3>
              <div class="space-y-2">
                <% facet.rows.each do |row| %>
                  <div class="flex items-center">
                    <%= form.check_box "#{facet.name}[]", 
                        { 
                          checked: params[facet.name]&.include?(row.value),
                          class: "mr-2",
                          onchange: "this.form.requestSubmit()"
                        },
                        row.value,
                        nil %>
                    <%= form.label "#{facet.name}_#{row.value}", 
                        "#{row.value} (#{row.count})",
                        class: "text-sm text-gray-600" %>
                  </div>
                <% end %>
              </div>
            </div>
          <% end %>
        </div>
      <% end %>
    </div>

    <div class="w-3/4" id="datasets">
      <div class="bg-white rounded-lg shadow">
        <div class="p-6">
          <h2 class="text-xl font-bold mb-4">
            Found <%= @search.total %> datasets
          </h2>

          <div class="space-y-6">
            <%= render partial: "dataset", collection: @datasets %>
          </div>

          <div class="mt-6">
            <%= will_paginate @datasets %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
