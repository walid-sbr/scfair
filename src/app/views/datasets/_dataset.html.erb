<% tag_categories = {
  organisms: { bg_color: "bg-blue-100", text_color: "text-blue-800", circle_color: "bg-blue-500", items: dataset.organisms, name_method: :name, category_name: "Organism" },
  cell_types: { bg_color: "bg-green-100", text_color: "text-green-800", circle_color: "bg-green-500", items: dataset.cell_types, name_method: :name, category_name: "Cell Type" },
  tissues: { bg_color: "bg-purple-100", text_color: "text-purple-800", circle_color: "bg-purple-500", items: dataset.tissues, name_method: :name, category_name: "Tissue" },
  developmental_stages: { bg_color: "bg-orange-100", text_color: "text-orange-800", circle_color: "bg-orange-500", items: dataset.developmental_stages, name_method: :name, category_name: "Developmental Stage" },
  diseases: { bg_color: "bg-red-100", text_color: "text-red-800", circle_color: "bg-red-500", items: dataset.diseases, name_method: :name, category_name: "Disease" },
  sexes: { bg_color: "bg-pink-100", text_color: "text-pink-800", circle_color: "bg-pink-500", items: dataset.sexes, name_method: :name, category_name: "Sex" },
  technologies: { bg_color: "bg-indigo-100", text_color: "text-indigo-800", circle_color: "bg-indigo-500", items: dataset.technologies, name_method: :protocol_name, category_name: "Technology" }
} %>
<div class="bg-white rounded-lg shadow p-4 mb-3 relative group/dataset cursor-pointer hover:bg-gray-50 transition-colors" 
     data-controller="dataset" 
     data-action="click->dataset#toggle">
  <div class="flex items-start justify-between">
    <div class="flex gap-2 flex-grow">
      <div class="shrink-0">
        <%= link_to dataset.source_url, target: "_blank", data: { action: "click->dataset#stopPropagation" } do %>
          <% logo_name = dataset.source_name.downcase.match?(/cellxgene|bgee|asap/) ? dataset.source_name.downcase : "default_logo" %>
          <div class="flex items-center justify-center w-8 h-8 rounded bg-brand-dark hover:bg-brand-dark/90 cursor-pointer">
            <%= image_tag "#{logo_name}.svg", class: "w-6 h-6", alt: "#{dataset.source_name} logo" %>
          </div>
        <% end %>
      </div>
      <div class="flex flex-col h-8">
        <div class="flex flex-col justify-between h-full py-0.5">
          <h2 class="text-xs font-medium text-gray-900 leading-none" 
              data-action="click->dataset#stopPropagation">
            <%= dataset.source_name %>
          </h2>
          <div class="flex items-center gap-2 text-xs text-gray-600 leading-none">
            <span><%= number_with_delimiter(dataset.cell_count) %> cells</span>
            <span class="text-gray-400">â€¢</span>
            <% if dataset.study.present? %>
              <div class="relative group" 
                   data-action="click->dataset#stopPropagation">
                <%= link_to "https://doi.org/#{dataset.study.doi}",
                      target: "_blank",
                      class: "text-brand-dark hover:text-brand-dark/80",
                      data: { action: "click->dataset#stopPropagation" } do %>
                  <span class="truncate">
                    <%= dataset.study.authors || dataset.study.first_author %>, <%= dataset.study.year %>
                  </span>
                <% end %>
                <div class="absolute hidden group-hover:block -left-4 bottom-6 z-50">
                  <div class="bg-gray-900 text-white text-xs rounded-md py-1.5 px-2 whitespace-normal w-80">
                    <%= dataset.study.title %>
                  </div>
                  <div class="w-2 h-2 bg-gray-900 transform rotate-45 translate-x-6 -translate-y-1"></div>
                </div>
              </div>
            <% else %>
              <%= link_to "https://doi.org/#{dataset.doi}",
                    target: "_blank",
                    class: "text-brand-dark hover:text-brand-dark/80",
                    data: { action: "click->dataset#stopPropagation" } do %>
                Article
              <% end %>
            <% end %>
          </div>
        </div>
      </div>
    </div>
    <div class="flex items-center gap-2 shrink-0" 
         data-action="click->dataset#stopPropagation">
      <% if dataset.explorer_url.present? %>
        <%= link_to "Explore", dataset.explorer_url,
            class: "px-3 py-1.5 text-sm font-medium rounded text-brand-dark bg-brand-light/10 hover:bg-brand-light/20",
            target: "_blank",
            data: { action: "click->dataset#stopPropagation" } %>
      <% end %>
      <% if dataset.file_resources.any? %>
        <div class="relative group" 
             data-action="click->dataset#stopPropagation">
          <button type="button" 
                  class="flex items-center gap-1.5 px-3 py-1.5 text-sm font-medium rounded text-gray-700 bg-gray-50 hover:bg-gray-100 border border-gray-200 transition-colors"
                  data-action="click->dataset#stopPropagation">
            <svg xmlns="http://www.w3.org/2000/svg" class="w-4 h-4" viewBox="0 0 20 20" fill="currentColor">
              <path fill-rule="evenodd" 
                    d="M3 17a1 1 0 011-1h12a1 1 0 110 2H4a1 1 0 01-1-1zm3.293-7.707a1 1 0 011.414 0L9 10.586V3a1 1 0 112 0v7.586l1.293-1.293a1 1 0 111.414 1.414l-3 3a1 1 0 01-1.414 0l-3-3a1 1 0 010-1.414z" 
                    clip-rule="evenodd"/>
            </svg>
          </button>
          <div class="absolute right-0 top-full pt-2 hidden group-hover:block z-50">
            <div class="bg-white rounded-md shadow-lg border border-gray-200 py-1 min-w-[120px]">
              <% dataset.file_resources.each do |resource| %>
                <%= link_to resource.url,
                    target: "_blank",
                    class: "flex items-center gap-2 px-3 py-1.5 text-sm text-gray-700 hover:bg-gray-50",
                    data: { action: "click->dataset#stopPropagation" } do %>
                  <svg xmlns="http://www.w3.org/2000/svg" class="w-3 h-3" viewBox="0 0 20 20" fill="currentColor">
                    <path fill-rule="evenodd" 
                          d="M3 17a1 1 0 011-1h12a1 1 0 110 2H4a1 1 0 01-1-1zm3.293-7.707a1 1 0 011.414 0L9 10.586V3a1 1 0 112 0v7.586l1.293-1.293a1 1 0 111.414 1.414l-3 3a1 1 0 01-1.414 0l-3-3a1 1 0 010-1.414z" 
                          clip-rule="evenodd"/>
                  </svg>
                  <%= resource.filetype %>
                <% end %>
              <% end %>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  </div>
  <div class="flex flex-wrap gap-1.5 mt-2 items-center justify-between" data-dataset-target="summary">
    <div class="flex flex-wrap gap-1.5 items-center">
      <% tag_categories.each do |category, data| %>
        <% if data[:items].any? %>
          <div class="px-2 py-0.5 rounded-full text-xs <%= data[:bg_color] %> <%= data[:text_color] %> flex items-center max-w-[160px] cursor-default" 
               title="<%= data[:items].first.send(data[:name_method]) %>"
               data-action="click->dataset#stopPropagation">
            <div class="truncate">
              <%= data[:items].first.send(data[:name_method]) %>
            </div>
            <% if data[:items].length > 1 %>
              <div class="ml-1 pl-1 flex items-center shrink-0">
                <div class="font-semibold <%= data[:text_color] %>">
                  +<%= data[:items].length - 1 %>
                </div>
              </div>
            <% end %>
          </div>
        <% end %>
      <% end %>
    </div>
  </div>
  <div class="hidden mt-4 space-y-4 relative" data-dataset-target="content">
    <div class="flex flex-wrap gap-6">
      <% tag_categories.each do |category, data| %>
        <% if data[:items].any? %>
          <div class="min-w-[200px]">
            <h3 class="font-medium text-sm text-gray-900 mb-2 flex items-center">
              <span class="w-2 h-2 rounded-full <%= data[:circle_color] %> mr-2"></span>
              <%= data[:category_name] %>
            </h3>
            <div class="flex flex-wrap gap-1">
              <% data[:items].each do |item| %>
                <span class="px-2 py-0.5 rounded-full text-xs <%= data[:bg_color] %> <%= data[:text_color] %> cursor-default" 
                      data-action="click->dataset#stopPropagation">
                  <%= item.send(data[:name_method]) %>
                </span>
              <% end %>
            </div>
          </div>
        <% end %>
      <% end %>
    </div>
    <% if dataset.links_count > 0 %>
      <div class="border-t pt-4">
        <h3 class="font-medium text-sm text-gray-900 mb-2 flex items-center">
          <svg xmlns="http://www.w3.org/2000/svg" class="w-4 h-4 mr-2" viewBox="0 0 20 20" fill="currentColor">
            <path d="M11 3a1 1 0 100 2h2.586l-6.293 6.293a1 1 0 101.414 1.414L15 6.414V9a1 1 0 102 0V4a1 1 0 00-1-1h-5z" />
            <path d="M5 5a2 2 0 00-2 2v8a2 2 0 002 2h8a2 2 0 002-2v-3a1 1 0 10-2 0v3H5V7h3a1 1 0 000-2H5z" />
          </svg>
          Related Links
        </h3>
        <div class="space-y-2">
          <% dataset.links.each do |link| %>
            <div class="block text-xs">
              <%= link_to link.url,
                  target: "_blank",
                  class: "text-brand-dark hover:text-brand-dark/80",
                  data: { action: "click->dataset#stopPropagation" } do %>
                <%= link.name.presence || extract_domain(link.url) || "External Link" %>
              <% end %>
            </div>
          <% end %>
        </div>
      </div>
    <% end %>
  </div>
</div>
